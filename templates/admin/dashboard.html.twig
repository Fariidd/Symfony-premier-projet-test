{% extends 'base.html.twig' %}

{% block title %}Hello AdminController!{% endblock %}

{% block body %}

    <a href="{{ path('admin_new') }}" class="btn btn-primary">Ajouter une série</a>

    <table class="table">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Nom</th>
            <th scope="col">Catégorie</th>
            <th scope="col">Poster</th>
            <th scope="col">Action</th>
        </tr>
        </thead>
        <tbody>
        {% for serie in allSeries %}
            <tr>
                <th scope="row">{{ serie.id }}</th>
                <td>{{ serie.name }}</td>
                <td>{{ serie.categorie.name }}</td>
                <td><img src="{{ asset('img/series/' ~ serie.poster) }}" class="w-25" alt=" {{ serie.name }} "></td>
                <td><a href="{{ path("admin_update", {"id" : serie.id}) }}">Modifier</a>  |<a href="{{ path("admin_delete", {"id" : serie.id}) }}"> Supprimer</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>




{% endblock %}
